<form action="{{ feedback_form }}" method="post" enctype="multipart/form-data" class="form-horizontal">
    <fieldset>
        <legend>Feedback Form</legend>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ text_name }}</label>
            <div class="col-sm-10">
                <input type="text" name="name" value="" id="input-name" class="form-control">
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-email">{{ text_email }}</label>
            <div class="col-sm-10">
                <input type="text" name="email" value="" id="input-email" class="form-control">
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-phone">{{ text_phone }}</label>
            <div class="col-sm-10">
                <input type="text" name="phone" value="" id="input-phone" class="form-control">
            </div>
        </div>
        <input type="hidden" name="page" value="{{ current_page }}">


    </fieldset>
    <div class="buttons">
        <div class="pull-right">
            <input class="btn btn-primary" type="submit" value="{{ text_submit }}">
        </div>
    </div>
</form>